{
    "canisters": {
        "ecobots" : {
            "type": "assets",
            "source": [
                "src/ecobots/dist"
            ],
            "build_assets": "npm run build",
            "gzip": true
        },
        "backend": {
            "type": "custom",
            "main": "src/backend/backend.ts",
            "candid": "src/backend/backend.did",
            "build": "npx azle backend",
            "wasm": ".azle/backend/backend.wasm",
            "gzip": true,
            "assets": [
                [
                    "src/chatbots/dist",
                    "dist"
                ],
                [
                    "src/backend/db.sqlite",
                    "db.sqlite"
                ]
            ],
            "build_assets": "npm run build",
            "metadata": [
                {
                    "name": "candid:service",
                    "path": "src/backend/backend.did"
                },
                {
                    "name": "cdk:name",
                    "content": "azle"
                }
            ]
        }
    },
    "output_env_file": ".env"
}